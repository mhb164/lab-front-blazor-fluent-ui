@page "/"
@inject UserContext UserContext
@inject NavigationManager NavigationManager
@inject LayoutService LayoutService

<PageTitle>Dashboard</PageTitle>

<AuthorizeView>
    <Authorized>
        The user: @UserContext.Title is authorized
    </Authorized>
    <NotAuthorized>
        @if (UserContext.ServerAccessible)
        {
            <FluentLabel>The User is not authorized</FluentLabel>
        }
        else
        {
            <FluentLabel>Server is not accessible.</FluentLabel>
        }
    </NotAuthorized>
</AuthorizeView>

@code {

    protected override void OnInitialized()
    {
        LayoutService.Title = "Dashboard";

        //NavigationManager.NavigateTo("/sign-in");
    }
}